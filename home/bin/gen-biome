  }

}
`;

const fileName = "biome.json";

if (!fs.existsSync(fileName)) {
  fs.writeFileSync(fileName, prettierFileContent, {
    mode: 0o644,
  });
}

async function main() {
  const packageJsonPath = path.join(process.cwd(), "package.json");
  if (!packageJsonPath) return;

  const pj = await import(packageJsonPath, {
    assert: { type: "json" },
  });

  Object.assign(pj.default.scripts, { format: "biome format --write ." });
  Object.assign(pj.default.scripts, { lint: "biome lint --write ." });
  Object.assign(pj.default.scripts, {
    "lint:unsafe": "biome lint --write --unsafe .",
  });

  fs.writeFile(packageJsonPath, JSON.stringify(pj.default), null, (err) => {
    console.error(err);
  });
}

main();
